{
  "manifest_version": 3,
  "name": "MIREA AutoApprover",
  "version": "1.0.0",
  "description": "/// Yay!",
  "icons": {
    "32": "images/icon-32.png"
  },
  "permissions": [
    "notifications",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "*://attendance.mirea.ru/*",
    "*://events.webinar.ru/*",
    "*://my.mts-link.ru/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "MIREA AutoApprover",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://events.webinar.ru/*",
        "*://my.mts-link.ru/*"
      ],
      "js": [
        "content.js",
        "lib/jsQR.min.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://events.webinar.ru/*",
        "*://my.mts-link.ru/*"
      ],
      "js": [
        "content_preload.js"
      ],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ]
}